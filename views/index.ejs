    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      //AOS initialisation
      AOS.init({
        duration: 1200,
        once: true,
        mirror: false
      });

      /* Menu slider on phones */
      let isMenuShown = false;

      $("#first_area_menu_slider_button img").click(()=>{
        if(isMenuShown){
          //Remove menu
          $(".black_opacity").css("display", "none");
          $("#first_area_menu_slider_button").css("position", "absolute");
          $("#first_area_nav").animate({"min-width":"0%", "width":"0%"}, 500, "swing", ()=>{
            $("#first_area_nav").css("display", "none");
            $("#first_area_menu_slider_button").css("filter", "none");
          });

          isMenuShown = false;
        }else{
          //Show menu
          $(".black_opacity").css("display", "block");
          $("#first_area_nav").css("display", "block");
          $("#first_area_menu_slider_button").css("position", "fixed");
          $("#first_area_nav").animate({"min-width":"40%", "width":"auto"}, 500);
          $("#first_area_menu_slider_button").css("filter", "invert(99%) sepia(99%) saturate(0%) hue-rotate(36deg) brightness(105%) contrast(100%)");

          isMenuShown = true;
        }
      });

      const url = new URLSearchParams(document.location.search);//Get the error param in URL and check if there is an error
      let error = url.get("error") || '0';

      switch(error){
        case '0':
          break;//Everything is OK
        case '1975664':
          alert("Sorry but Disblock is actually in closed Alpha for testing purposes. You can join the Discord Server to stay informed about us, we're planning to open soon !");
          break;
        default:
          break;
      }
    </script>
