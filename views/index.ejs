    <script>
      //AOS initialisation
      AOS.init({
        duration: 1200,
        once: false,
        mirror: true
      });

      /* Menu slider */
      let isMenuShown = false;

      $(".menu_svg").click(()=>{
        if(isMenuShown){
          //Remove menu
          $(".menu_div").animate({"max-width":"0px"}, 500, "swing", ()=>{
            $(".black_opacity").css("display", "none");
            $(".menu_div nav").css("visibility", "hidden");
            $(".menu_div").css("display", "none");
          });
        }else{
          //Show menu
          $(".black_opacity").css("display", "block");
          $(".menu_div nav").css("visibility", "visible");
          $(".menu_div").css("display", "block");
          $(".menu_div").animate({"max-width":"300px"}, 500);
        }
        isMenuShown = !isMenuShown;
      });

      const url = new URLSearchParams(document.location.search);//Get the error param in URL and check if there is an error
      let error = url.get("error") || '0';

      switch(error){
        case '0':
          break;//Everything is OK
        case '1975664':
          alert("Sorry but Disblock is actually in closed Alpha for testing purposes. You can join the Discord Server to stay informed about us, we're planning to open soon !");
          break;
        default:
          break;
      }
    </script>
