/* Style for rollback panel */

/* || Global properties */

#content_div{
  position: absolute;
  top: 40px;
  bottom: 0px;
  left: 20%;
  right: 0%;
}
.content_title, .content_text{
  text-align: center;
  font-size: 1.6em;
  color: #EAEAEA;
  margin-right: 20px;
  margin-left: 20px;
}
.content_text{
  font-size: 1em;
  margin-top: 20px;
}
.content_saves_div{
  margin: 20px;
  overflow: auto;
  max-height: 550px;
}
.content_saves_div_saved_workspace{
  max-height:100px;
  background-color: #EAEAEA;
  border-bottom: solid 1px black;
  position:relative;
}
.content_saves_div_saved_workspace_id{
  margin:0px;
  font-size:35px;
  padding-left:10px;
  padding-top:10px;
  color:black;
  text-align:left;
}
.content_saves_div_saved_workspace_date{
  margin:0px;
  font-size:15px;
  color:black;
  text-align:left;
  padding-left:10px;
  padding-bottom:10px;
}
.content_saves_div_saved_workspace_restore{
  border: solid 1px black;
  background-color: #2e86ab;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10px;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-right: 25px;
  padding-left: 25px;
  border-radius: 8px;
  font-size: 1em;
  cursor: pointer;
}
.content_saves_div_saved_workspace_restore:hover{
  background-color:#3aa7d5;
}

/* || Computer properties */
@media (min-width: 900px) {

}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  .content_saves_div{
    max-height: 350px;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  #content_div{
    left: 0%;/* Menu is hidden, content can expand on left */
  }
  .content_saves_div{
    max-height: 350px;
  }
}
