/* ##### first_area_div ##### */

/* || Global properties */

#header_div_a_button{
  text-decoration: none;
  height: 0px;
  display: block;
}

#first_area_div{
  width: 100%;
  height: calc(100vh - 250px);
  position: relative;
  /*background: linear-gradient(#2E86AB, #131415);*/
  background: radial-gradient(at 0% 0%, #2E86AB, #131415 70%);
}

.first_area_div_text{
  position: absolute;
  top: 20%;
  right: 10%;
  max-width: 30%;
}

.first_area_div_text > p{
  font-family: Roboto, Arial;
  color: white;
  font-size: 2em;
  text-align: center;
  margin:0;
}

.first_area_div_button{
  clip-path: polygon(7.5% 0%, 92.5% 0%, 100% 50%, 92.5% 100%, 7.5% 100%, 0% 50%);;
  background-color: #10475E;
  opacity: 75%;
  position: absolute;
  bottom: 20%;
  left: 10%;
  cursor: pointer;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 50px;
  padding-right: 50px;
}
.first_area_div_button:hover{
  opacity:100%;
}
.first_area_div_button > div > p{
  color: rgba(46,134,171,0.75);
  font-size: 30px;
  font-family: 'Montserrat Alternates', Arial;
  margin:0;
  display:inline;
  margin-right: 10px;
}
.first_area_div_button > div > img{
  opacity: 0.75;
  position: relative;
  top: 5px;
}

.first_area_gradient_start{
  height: 150px;
  width: 100%;
  background-color: #131415;
}

/* || Computer properties */
@media (min-width: 900px) {

}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  #first_area_div{
    min-height: calc(100vh - 100px);/* Avoid button behind line_div on horizontals phones*/
    position: static;
  }
  .first_area_div_text{
    position: static;
    max-width: 60%;
    margin-left:35%;
    margin-right: 5px;
    margin-top: 50px;
    float:right;
  }
  .first_area_div_button{
    width: fit-content;
    position: relative;
    top: 60px;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  #first_area_div{
    height: auto;
    min-height: calc(100vh - 250px);
    position: static;
  }

  .first_area_div_text{
    position: static;
    width: 80%;
    margin: auto;
    max-width: none;
    margin-top: 0px;
    padding-top:40px;
  }

  .first_area_div_button{
    position: static;
    margin:auto;
    margin-top: 40px;
    width: fit-content;
  }

}

/* ##### content_line_div ##### */

/* || Global properties */
.content_line_div{
    width: 100%;
    height: 120px;
    background-color: #1C232A;
    position: relative;
    overflow: hidden;
    margin-top: 100px;
}

.content_line_div_text{
  position: absolute;
  top: 50%;
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
  width:20%;
}

.content_line_div_text p{
  color: white;
  font-size: 1.5em;
}

.content_line_div_media{
  position: absolute;
  top:50%;
  right: 0px;
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
  height: 80%;
  width: 40%;
  border: dotted 2px red;
}

/* || Computer properties */
@media (min-width: 900px) {
  .content_line_div_text{
    margin-left: 20%;
  }
  .content_line_div_media{
    margin-right: 20%;
  }
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  .content_line_div_text{
    margin-left: 10%;
  }
  .content_line_div_media{
    margin-right: 10%;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  .content_line_div_text{
    margin-left: 10%;
  }
  .content_line_div_media{
    margin-right: 10%;
  }

  .content_line_div_text p{
    color: white;
    font-size: 1em;
  }
  .content_line_div_text{
    width: 30%;
  }
}

/* ##### why disblock area ##### */

/* || Global properties */

#why_disblock_div{
  margin: auto;
  margin-top: 50px;
}

.why_disblock_content_div{ /* A sub-section of the big Why section */
  width: 100%;
  min-height: 40vh;
  margin-top: 15vh;
  position: relative;
}
.why_disblock_content_div:first-of-type {
  margin-top: 5vh;
}

.why_disblock_content_div > div > *:not(p,a){/* Contents in div, img and text sections */
  /* That don't apply on p and a, since their properties are defined by class */
  width:100%;
  text-align: left;
  color:white;
}

.why_disblock_content_div div p{
  color:white;
}

.why_disblock_content_div_text_main_span{
  font-size: 2em;
}
.why_disblock_content_div_text_desc_span{
  font-size: 1em;
}
.why_disblock_content_div_text_link_span a{
  font-size: 1em;
  color:#2E86AB;
}
.why_disblock_content_div_text_link_span a::before{
  content: "> ";
}

/* || Computer properties */
@media (min-width: 900px) {
  #why_disblock_div{
    width: 60%;
  }

  .why_disblock_content_div div{/* Sub-div, parents of img/text sections */
    height: 100%;
    display: inline-block;
    position: absolute;
  }

  .why_disblock_content_div > div > *:not(p,a){
    position: absolute;
    top:50%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }

  .why_disblock_content_div_left{
    left:0px;
  }
  .why_disblock_content_div_right{
    right:0px;
  }
  .why_disblock_content_div_img{
    width:50%;
  }
  .why_disblock_content_div_text{
    width: 40%;
  }
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  #why_disblock_div{
    width: 80%;
  }

  .why_disblock_content_div_text{
    width:100%;
  }

  .why_disblock_content_div_img{
    width: 80%;
    margin-left: 10%;
  }
}


/* || Phones properties */
@media (max-width: 649px){
  #why_disblock_div{
    width: 80%;
  }

  .why_disblock_content_div_text, .why_disblock_content_div_img{
    width:100%;
  }
}

/* ##### docs area ##### */

/* || Global properties */
#docs_div{
  margin: auto;
  margin-top: 60px;
}

#docs_div p{
  color: white;
  text-align: center;
  font-size: 1em;
}

#docs_div_content::before{
  /* Content is defined directly on html */
  color:white;
  font-size: 1em;
  display: flex;
  justify-content: center;
}
#docs_div_content{
  width: 100%;
  margin-top: 20px;
  position: relative;
}

.docs_div_content_link{
  margin-top: 60px;
  height: 180px;
}
.docs_div_content_link_text_div{
  width: 100%;
  height: 20%;
}
.docs_div_content_link_img_div{
  width: 100%;
  height: 75%;
