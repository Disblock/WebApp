  }

  .social_networks_div_content_publication{
    border: dotted 2px green;
    width: 80%;
    min-height: 100px;
    margin-top: 10px;
  }

  .social_networks_div_content_publication:nth-last-of-type(-n+2){/* Remove two last divs */
    display: none;
  }
}

