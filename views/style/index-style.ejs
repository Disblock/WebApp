/*  ##### Keyframes ##### */
@keyframes button_hover {
  from {
    background-color: #2E86AB;
  }

  to {
    background-color: #3EA1CC;
  }
}

@keyframes button_not_hover {
  from {
    background-color: #3EA1CC;
  }

  to {
    background-color: #2E86AB;
  }
}
