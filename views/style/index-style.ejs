  }
  .docs_div_content_link_img_div{
    margin-left: 10%;
  }

  #docs_div_content_discord_img{
    width: 100%;
  }
  .docs_div_content_discord_img_text_div{
    margin-top: 60px;
  }
  .docs_div_content_discord_img_div{
    margin-top: 20px;
  }
