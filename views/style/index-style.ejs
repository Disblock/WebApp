  line-height: 1.5em;
  font-size: 1.8em;
}

#menu_nav > ul > li > a{
  color: #EAEAEA;
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  .menu_div{
    top:80px;
  }
  #menu_nav > ul > li{
    font-size:1.4em;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  .menu_div{
    top:55px;
    width:200px;
  }
  #menu_nav > ul > li{
    font-size:1.2em;
  }
