/* Style for index */

/* ##### Globally used properties ##### */
.section_title{
  color:white;
  text-align: center;
  font-size: 2em;
}

/* ##### header_div ##### */
.dummy_div{
  width:100%;
  height:100px;
  visibility:hidden;
}

.header_div{
  width: 100%;
  height: 100px;
  background-color: #131415;
  position: fixed;
  border-bottom: 5px #2E86AB solid;
  top:0%;
  z-index:10;
}
.header_div > h1{
  font-family: Orbitron, Arial;
  margin:0;
  text-align: center;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
  font-size: 3em;
  color: #2E86AB;
}
.header_div > h1 > span{
  color:white;
  position: relative;
  top:5px;
  font-family: Orbitron, Arial;
}
.menu_svg{
  height: 100%;/*100px*/
  width: 300px;
  position: absolute;
  left:0px;
  cursor:pointer;
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  .header_div, .dummy_div{
    height: 75px;
  }
  .header_div > h1{
    font-size: 2.5em;
    left: calc(50vw + 75px);
  }
  .menu_svg{
    width: 225px;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  .header_div, .dummy_div{
    height: 50px;
  }
  .header_div > h1{
    font-size: 1.25em;
    left: calc(50vw + 75px);
  }

  .menu_svg{
    width: 150px;
  }

}

/* || Phones properties
      Used when phone is holded horizontaly*/
@media (max-height:450px){
  .dummy_div{
    display:none;
  }
  .header_div{
    position:relative;
    z-index:12;
  }
  .menu_svg{
    position:fixed;
    height: auto;
    z-index:12;
  }

/* ##### menu_div ##### */

  .menu_div{
    top:0 !important;
  }
  #menu_nav > ul > li{
    font-size: 1em !important;
  }

  /* || Computer properties */
  @media (min-width: 900px) {
    .menu_div{width: 300px !important;}
    #menu_nav{margin-top: 120px !important;}
  }
  /* || Tablets properties */
  @media (max-width: 899px) and (min-width: 650px) {
    .menu_div{width: 225px !important;}
    #menu_nav{margin-top: 90px !important;}
  }
  /* || Phones properties */
  @media (max-width: 649px){
    .menu_div{width: 150px !important;}
    #menu_nav{margin-top: 70px !important;}
  }

}/* End of horizontal phones style */

.menu_div{
  width: 300px;/* Must modify JS if value edited*/
  position: fixed;
  top:105px;/* +5px for border of header */
  bottom:0%;
  left:0%;
  background-color:rgba(28,35,42,0.75);
  z-index: 10;
  box-shadow:3px 0px 16px 0px #2e86ab;
