#index_menu_div{
  position: absolute;
  top: 0%;
  right: 0%;
  left: 0%;

}


#index_menu_logo_div > a >img{
  height: 100%;
}

#index_menu_login_discord{
  position: absolute;
  right: 2%;
}

#guilds_holder{
  text-align: center;
  border-radius: 25px;
  border: dotted 4px red;
}

.panel_guild_div{
  display: inline-block;
  /*border: dotted 2px;*/
  margin-left: 5px;
  width: 10%;
}

.panel_guild_div_img_holder{
  height: 25%;
  width: 100%;
  /*border: dotted 2px red;*/
}

#infoDiv{
  position: absolute;
  left: 0%;
  right: calc(20% + 8px);
  margin-top: 15px;
  vertical-align: top;
  text-align: center;
  border-radius: 25px;
  border: dotted 4px red;
}

#rightDiv{
  margin-top: 15px;
  text-align: center;
  border-radius: 25px;
  border: dotted 4px red;
}




/*Telephones*/
@media (max-width: 949px){

  #infoDiv{
    position: relative;
    width: 100%;
  }

  #rightDiv{
    position: relative;
    width: 100%;
  }

  .panel_guild_div{
    display: inline-block;
    width: 15%;
  }

  .panel_guild_div_img_holder{
    height: 50%;
    width: 100%;
  }


  #index_menu_user_avatar_div{
    position: absolute;
    top: 5%;
    right: 102%;
    bottom: 5%;
  }

  #index_menu_logo_div{
    position: absolute;
    top: 10%;
    bottom: 10%;
    left: 10%;
    right: 65%;
  }

  #index_menu_div{
    background-color: #33435C;
    border-bottom: solid 1px black;
    bottom: 92%;
    z-index: 99;
  }

  #index_menu_phone_div{
    display: block;
    position: absolute;
    left: 45%;
    top: 50%;
    text-align: center;
    vertical-align: middle;
  }

  #index_menu_react_placeholder{
    position: absolute;
    top: 100%;
    left: 0%;
    right: 0%;
    background-color: #4B88A2;
  }

  .index_menu_tab > a > p{
    text-align: center;
    font-size: calc(16px + 0.5vw);
  }

  .index_menu_tab{
    width: 100%;
    border-bottom: solid 1px #233458;
  }

  #index_menu_user_avatar_div{
    display: none;
  }

  .panel_guild_div_img_holder > a > img{
    width: 100%;
  }
}

/*Ordinateurs*/
@media (min-width: 950px) {

  #rightDiv{
    position: absolute;
    left: calc(80% + 8px);
    right: 0%;
  }

  #infoDiv{
    position: absolute;
    left: 0%;
    right: calc(20% + 8px);
  }

  .panel_guild_div_img_holder > a > img{
    height: 100%;
  }

  #index_menu_login_discord{
    position: absolute;
    right: 2%;
    top: -20%;
  }

  #index_menu_div{
    background-color: rgb(255, 255, 255, 0.2);
    bottom: 94%;
  }

  #index_menu_user_avatar_div{
    position: absolute;
    top: 20%;
    right: 102%;
    bottom: 20%;
  }

  #index_menu_logo_div{
    position: absolute;
    top: 10%;
    bottom: 10%;
    left: 10%;
  }

  #index_menu_phone_div{
    display: none;
  }

  .index_menu_tab{
    position: relative;
    top: 15%;
    display: inline;
    margin-left: 10%;
  }

  .index_menu_tab:hover{
    padding-bottom: 10px;
    /*background-color: rgb(108, 197, 81, 0.6);*/
    border-bottom: solid 6px rgb(151, 176, 172, 0.6);
  }

  .index_menu_tab > a > p{
    display: inline;
    vertical-align: middle;
    font-size: calc(8px + 0.6vw);
  }

  #index_menu_react_placeholder{
    position: absolute;
    top: 10%;
    bottom: 10%;
    left: 15%;
    right: 10%;
  }

  #index_menu_tab_div{
    position: absolute;
    top: 0%;
    bottom: 0%;
    left: 0%;
    right: 0%;
  }


}
