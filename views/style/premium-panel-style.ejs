/* Style for premium management panel */

/* || Global properties */

#content_div{
  position: absolute;
  top: 40px;
  bottom: 0px;
  left: 20%;
  right: 0%;
}
.content_title, .content_text{
  text-align: center;
  font-size: 1.6em;
  color: #EAEAEA;
  margin-right: 20px;
  margin-left: 20px;
}
.content_text{
  font-size: 1em;
  margin-top: 20px;
}

.premium_servers_div{
  width: 90%;
  margin-right: auto;
  margin-left: auto;
  height: fit-content;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  overflow-y: hidden;
}

.premium_servers_div_server{
  margin-left: 5px;
  margin-right: 5px;
}
.premium_servers_div_server > img{
  border-radius: 50%;
  cursor: pointer;
}

.premium_management_div{
  background-color: #EAEAEA;
  width: 90%;
  margin: auto;
  margin-top: 15px;
  position: relative;
  overflow: hidden;
}

.premium_management_div_info_div{
  width: fit-content;
  position:absolute;
  bottom:2px;
  left:2px;
  font-size: 0.9em;
}
.premium_management_div_title_div{
  position: absolute;
  top: 5px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 1.5em;
  text-align: center;
}
.premium_management_div_id_div{
  position: absolute;
  top: 2px;
  right: 2px;
  font-size: 1.5em;
}

#premium_management_div_form{
  text-align: center;
  padding:70px;
}
#send_form_button{
  border-radius: 8px;
  border: 1px solid black;
  background-color: #2e86ab;
  margin-top: 5px;
  cursor:pointer;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 30px;
  padding-right: 30px;
  color: #EAEAEA;
}
#send_form_button:hover{
  background-color: #42a7d1;
}

.support_and_premium_div{
  width: 90%;
  margin: auto;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;
  justify-content: space-around;
  align-items: flex-start;
}
.support_us_div{
  text-align: center;
  margin-bottom: 20px;
}
.support_us_div p{
  padding: 0px;
  margin: 0px;
  color: #eaeaea;
  margin-bottom: 15px;
}
.support_us_div a{
  color: #EAEAEA;
  text-decoration: none;
  background-color: rgb(255,66,77);
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 8px;
}
.premium_code_div{
  text-align: center;
}
.premium_code_div label{
  color:#EAEAEA;
}
#premium_code_input{
  border-radius: 8px;
  border: none;
  height: 1.1em;
  min-width: 75px;
}
#premium_code_input:focus{
  outline: none;
  box-shadow: 0px 0px 5px 2px #2e86ab;
}
#premium_code_submit_button{
  color: #EAEAEA;
  text-decoration: none;
  background-color: #2e86ab;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 8px;
  border: none;
  margin-top: 10px;
  cursor: pointer;
}




/* || Computer properties */
@media (min-width: 900px) {
  .premium_management_div_info_div{
    position: static;
    margin-top: 2px;
    margin-left: 2px;
    width: fit-content;
  }
  #premium_management_div_form{
    padding:0px;
    margin-bottom: 20px;
  }
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {

}

/* || Phones properties */
@media (max-width: 649px){
  #content_div{
    left: 0%;/* Menu is hidden, content can expand on left */
  }
}
