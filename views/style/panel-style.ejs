/* ##### top_div ##### */

/* || Global properties */
#top_div{
  background-color: #1C232A;
  width: 100%;
  height: 40px;
  z-index: 20;
  position: fixed;
  overflow: hidden;
  border-bottom: solid 3px #2E86AB;
}

#top_div_img_div{
  display: inline-block;
  height: 30px;
  margin-top: 8px;
  margin-bottom: 0px;
  width: 30px;
  margin-left: 15px;
}
#top_div_img_div a img{
  height: 100%;
  border-radius: 50%;
  margin: 0;
}

#top_div_logout{
  position: absolute;
  top: 8px;
  bottom: 5px;
  right: 5px;
}
#top_div_logout a img{
  filter: invert(99%) sepia(99%) saturate(0%) hue-rotate(36deg) brightness(105%) contrast(100%);
}

#top_div_user{
  position: absolute;
  top: 8px;
  bottom: 5px;
  right: 35px;
  display: flex;
  justify-content: flex-end;
  flex-wrap: nowrap;
}
#top_div_user::after{
  /*content defined in HTML*/
  color: #EAEAEA;
  font-size: 1.2em;
  margin-left: 10px;
  margin-top: 5px;
  margin-bottom: 5px;
}
#top_div_user img{
  height: 30px;
  width: 30px;
  border-radius: 50%;
}

