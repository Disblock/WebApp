/* ##### menu_div ##### */

/* || Global properties */
#menu_div{
  position: fixed;
  top: 0px;
  bottom: 0%;
  left: 0%;
  right: 80%;
  background-color: #1C232A;
  border-right: solid 3px #2E86AB;
  z-index: 10;
  overflow: auto;
}

#menu_div_links{
  width: 80%;
  min-height: 20px;
  margin: auto;
  margin-top: 80px;
}
#menu_div_links nav, #menu_div_links nav ul{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}
#menu_div_links nav ul li{
  list-style: none;
  margin-bottom: 0.5em;
}
#menu_div_links nav ul li a{
  line-height: 150%;
  font-size: 1em;
  color: #EAEAEA;
}
#menu_div_links nav ul li a::before{
  content: "> ";
}

#menu_div_guilds{
  width: 80%;
  max-height: 60%;
  margin: 60px auto;
  overflow-y: auto;
  overflow-x: hidden;
}
.menu_div_guilds_guild_div{
  width: 100%;
  min-height: 3.5em;
  background-color: #EAEAEA;
  border-bottom: solid 1px #1C232A;
  position: relative;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.menu_div_guilds_guild_div:hover{
  background-color: #7F7F80;
}
.menu_div_guilds_guild_div p{
  font-size: 1em;
  color: black;

}

/* || Computer properties */
@media (min-width: 900px) {
  .menu_div_guilds_guild_div img{
    float: left;
    height: 1.5em;
    border-radius: 50%;
    margin-right: 10px;
    margin-left: 5px;
  }
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  .menu_div_guilds_guild_div p{
    display: none;
  }
  .menu_div_guilds_guild_div img{
    border-radius: 50%;
    height: 2em;
    width: 2em;
    margin: auto;
  }
  .menu_div_guilds_guild_div{
    height: 3.5em;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  #menu_div{
    right: auto;
    width: 0%;
    display: none;/* Shown with JS */
  }

  #menu_div_guilds{
    width: 80%;
  }

  .menu_div_guilds_guild_div{
    height: 3.5em;
  }

  .menu_div_guilds_guild_div img{
    margin: auto;
    border-radius: 50%;
    height: 2em;
    width: 2em;
  }

  .menu_div_guilds_guild_div p{
    display: none;
  }
}

/* ##### Messages Window ##### */

/* || Global properties */
.message_window_div{
  background-color: #EAEAEA;
  border-radius: 8px;
  width: 275px;
  /*height: 425px;*/
  position: fixed;
  z-index: 1000;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.message_window_div_title{
  font-size: 1.5em;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.message_window_div_animation_div{
  height: 180px;
  width: 180px;
  margin: auto;
}

.message_window_div_text{
  font-size: 1.2em;
  text-align: center;
  width: 80%;
  margin: auto;
  margin-top: 10px;
}

.message_window_div_button {
    margin-top: 10px;
    margin-bottom: 15px;
    padding: 10px;
    text-align: center;
    position: relative;
    left: 50%;
    width: 80%;
    transform: translateX(-50%);
    background-color: #2e86ab;
    cursor: pointer;
    border: black 1px solid;
    border-radius: 8px;
}

button.message_window_div_button:hover {
    background-color: #2995c3;
}

