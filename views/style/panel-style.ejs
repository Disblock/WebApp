/* ##### menu_div ##### */

/* || Global properties */
#menu_div{
  position: fixed;
  top: 0px;
  bottom: 0%;
  left: 0%;
  right: 80%;
  background-color: #1C232A;
  border-right: solid 3px #2E86AB;
  z-index: 10;
  overflow: auto;
}

#menu_div_links{
  width: 80%;
  min-height: 20px;
  margin: auto;
  margin-top: 80px;
}
#menu_div_links nav, #menu_div_links nav ul{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}
#menu_div_links nav ul li{
  list-style: none;
  margin-bottom: 0.5em;
}
#menu_div_links nav ul li a{
  line-height: 150%;
  font-size: 1em;
  color: #EAEAEA;
}
#menu_div_links nav ul li a::before{
  content: "> ";
}

#menu_div_guilds{
  width: 80%;
  max-height: 60%;
  margin: 60px auto;
  overflow-y: auto;
  overflow-x: hidden;
}
.menu_div_guilds_guild_div{
  width: 100%;
  min-height: 3.5em;
  background-color: #EAEAEA;
  border-bottom: solid 1px #1C232A;
  position: relative;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.menu_div_guilds_guild_div:hover{
  background-color: #7F7F80;
}
.menu_div_guilds_guild_div p{
  font-size: 1em;
  color: black;

}

/* || Computer properties */
@media (min-width: 900px) {
  .menu_div_guilds_guild_div img{
    float: left;
    height: 1.5em;
    border-radius: 50%;
    margin-right: 10px;
    margin-left: 5px;
  }
}

/* || Tablets properties */
@media (max-width: 899px) and (min-width: 650px) {
  .menu_div_guilds_guild_div p{
    display: none;
  }
  .menu_div_guilds_guild_div img{
    border-radius: 50%;
    height: 2em;
    width: 2em;
    margin: auto;
  }
  .menu_div_guilds_guild_div{
    height: 3.5em;
  }
}

/* || Phones properties */
@media (max-width: 649px){
  #menu_div{
    right: auto;
    width: 0%;
    display: none;/* Shown with JS */
  }

  #menu_div_guilds{
    width: 80%;
  }

  .menu_div_guilds_guild_div{
    height: 3.5em;
  }

  .menu_div_guilds_guild_div img{
    margin: auto;
    border-radius: 50%;
    height: 2em;
    width: 2em;
  }

  .menu_div_guilds_guild_div p{
    display: none;
  }
}


/*##### OTHERS #####*/
#menu_button{
  display: none;
  cursor: pointer;
}
/* || Phones properties */
@media (max-width: 649px){
  #menu_button{
    display: block;
    z-index: 11;
    position: fixed;
    top: 60px;
    left: 10px;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    height: 24px;
    width: 24px;
    background-color: #2E86AB;
    border-radius: 16%;
  }
  #menu_button img{
    filter: invert(99%) sepia(99%) saturate(0%) hue-rotate(36deg) brightness(105%) contrast(100%);
  }
}
